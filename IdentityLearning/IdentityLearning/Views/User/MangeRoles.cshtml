@model UserRoleViewModel

@{
	ViewData["Title"] = "Mange Roles";
}

<form method="post">
	<div class="card-header">
		<h2>@Model.UserName</h2>
		Add/Remove Role
		<div class="card-body">
			<input type="hidden" asp-for="Id"/>
			@for(int i=0;i<Model.Roles.Count();i++)
			{
				<div class="form-check m-1">
					<input type="hidden" asp-for="@Model.Roles[i].RoleName"/>
					<input asp-for="@Model.Roles[i].CheckingRole" class="form-check-input"/>
					<label asp-for="@Model.Roles[i].CheckingRole" class="form-check-label">
						@Model.Roles[i].RoleName
					</label>

				</div>
			}
			<div asp-validation-summary="All" class="text-danger"></div>
			
		</div>
		<div class="card-footer">
			<input type="submit" class="btn btn-primary"/>
			<a asp-action="Index" class="btn btn-secondary">Cancle</a>
		</div>


	</div>
</form>